{
    "builders": [
        {
            "type": "docker",
            "image": "32degrees/consul:0.1",
            "export_path": "javaapp.tar",
            "pull": false
        }
    ],

    "provisioners": [
        {
            "type": "ansible-local",
            "playbook_file": "../ansible/java_app.yml",
            "role_paths": [
                "../ansible/consul_client",
                "../ansible/java_app"
            ]
        }
    ],

    "post-processors": [
        {
            "type": "docker-import",
            "repository": "32degrees/javaapp",
            "tag": "0.1"
        }
    ]
}